<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

        <android.support.wearable.view.CardFrame
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="5dp">
                <TextView
                    android:id="@+id/type_account"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="22sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_detail_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="1dp"/>
                <TextView
                    android:id="@+id/num_account"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:layout_below="@+id/type_account"/>
                <TextView
                    android:id="@+id/saldo"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:layout_below="@+id/num_account"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/available_account"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:layout_below="@+id/saldo"
                    android:layout_marginTop="6dp"/>
            </RelativeLayout>
        </android.support.wearable.view.CardFrame>
</android.support.wearable.view.BoxInsetLayout>