<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

        <android.support.wearable.view.CardFrame
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="5dp">
                <TextView
                    android:id="@+id/type_card"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="CCorriente"
                    android:textColor="@color/black"
                    android:textSize="22sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/card_detail_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="1dp"/>
                <TextView
                    android:id="@+id/num_card"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:layout_below="@+id/type_card"/>
                <TextView
                    android:id="@+id/disponible"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:layout_below="@+id/num_card"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/available_card"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="21sp"
                    android:layout_below="@+id/disponible"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/total_card"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_below="@+id/disponible"
                    android:layout_toRightOf="@+id/available_card"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="1dp"/>
            </RelativeLayout>
        </android.support.wearable.view.CardFrame>
</android.support.wearable.view.BoxInsetLayout>