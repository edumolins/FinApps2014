<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="wear_round"
    android:background="@color/white">

    <Button
        android:id="@+id/item1"
        android:background="@drawable/circle"
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:text="1"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:onClick="writeNumber"/>
    <Button
        android:id="@+id/item2"
        android:background="@drawable/circle"
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:text="2"
        android:layout_toRightOf="@+id/item1"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="7dp"
        android:onClick="writeNumber"/>
    <Button
        android:id="@+id/item3"
        android:background="@drawable/circle"
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:text="3"
        android:layout_toRightOf="@+id/item2"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="7dp"
        android:onClick="writeNumber"/>
    <Button
        android:id="@+id/item4"
        android:background="@drawable/circle"
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:text="4"
        android:layout_toRightOf="@+id/item3"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:onClick="writeNumber"/>
    <Button
        android:id="@+id/item5"
        android:background="@drawable/circle"
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:text="5"
        android:layout_below="@+id/item1"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:onClick="writeNumber"/>
    <Button
        android:id="@+id/item6"
        android:background="@drawable/circle"
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:text="6"
        android:layout_below="@+id/item1"
        android:layout_toRightOf="@+id/item5"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="7dp"
        android:onClick="writeNumber"/>
    <Button
        android:id="@+id/item7"
        android:background="@drawable/circle"
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:text="7"
        android:layout_below="@+id/item1"
        android:layout_toRightOf="@+id/item6"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="7dp"
        android:onClick="writeNumber"/>
    <Button
        android:id="@+id/item8"
        android:background="@drawable/circle"
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:text="8"
        android:layout_below="@+id/item1"
        android:layout_toRightOf="@+id/item7"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:onClick="writeNumber"/>
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/item8">
        <Button
            android:id="@+id/item9"
            android:background="@drawable/circle"
            android:layout_height="34dp"
            android:layout_width="34dp"
            android:text="9"
            android:layout_marginTop="7dp"
            android:onClick="writeNumber"/>
        <Button
            android:id="@+id/item0"
            android:background="@drawable/circle"
            android:layout_height="34dp"
            android:layout_width="34dp"
            android:text="0"
            android:layout_toRightOf="@+id/item9"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:onClick="writeNumber"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/layout">
        <EditText
            android:id="@+id/edit"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Codi lÃ­nia oberta"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="15dp"/>
        <android.support.wearable.view.CircledImageView
            android:id="@+id/ok"
            android:alpha="0.5"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:src="@drawable/flechita"
            android:layout_toRightOf="@+id/edit"
            app:circle_border_color="#FFFFFFFF"
            app:circle_border_width="2dp"
            android:layout_centerVertical="true"
            app:circle_color="@android:color/holo_blue_dark"/>

        </RelativeLayout>


</RelativeLayout>