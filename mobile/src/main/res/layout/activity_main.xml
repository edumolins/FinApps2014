<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/white">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/app_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon"
            android:layout_marginLeft="7dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/user"
        android:text="USUARIO"
        android:textColor="#0099cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:id="@+id/border1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#0099cc"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/user"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/user_name"
        android:text="Albert Raich"
        android:textColor="#A4A4A4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/border1"
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/logout"
        android:text="Cerrar sesiÃ³n"
        android:textColor="#A4A4A4"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/border1"
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/avisos"
        android:text="AVISOS"
        android:textColor="#0099cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:id="@+id/border2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#0099cc"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/avisos"
        android:layout_marginTop="3dp"/>

    <RelativeLayout
        android:id="@+id/settings1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/border2"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/recibo"
            android:text="Recibo cargado a cuenta"
            android:textColor="#A4A4A4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"/>
        <ToggleButton
            android:id="@+id/recibo_toogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:checked="true"
            android:textOff="No"
            android:textOn="Si"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/settings2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings1"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/ingreso"
            android:text="Ingreso recibido"
            android:textColor="#A4A4A4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"/>
        <ToggleButton
            android:id="@+id/ingreso_toogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:checked="true"
            android:textOff="No"
            android:textOn="Si"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/settings3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings2"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/pago"
            android:text="Pago recibido"
            android:textColor="#A4A4A4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"/>
        <ToggleButton
            android:id="@+id/pago_toogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:checked="false"
            android:textOff="No"
            android:textOn="Si"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/notificaciones"
        android:text="Enviar Notificaciones al Wearable"
        android:textColor="#0099cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:id="@+id/border3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#0099cc"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/notificaciones"
        android:layout_marginTop="3dp"/>

    <Button
        android:id="@+id/notification1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Enviar Recibo cargado a cuenta"
        android:layout_below="@+id/border3"/>
    <Button
        android:id="@+id/notification2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Enviar Ingreso recibido"
        android:layout_below="@+id/notification1"/>
    <Button
        android:id="@+id/notification3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Enviar Pago recibido"
        android:layout_below="@+id/notification2"/>
    </RelativeLayout>
   </ScrollView>
</RelativeLayout>
